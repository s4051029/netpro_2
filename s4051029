//class thread



import java.io.IOException;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JEditorPane;
import javax.swing.JTextArea;

/*
 * To change this template, choose Tools | Templates
 * and open the template in the editor.
 */

/**
 *
 * @author User
 */
public class ThreadWorker extends Thread {

    URL url;
    JEditorPane browser;
    JTextArea log;

    public URL getUrl() {
        return url;
    }

    public void setUrl(URL url) {
        this.url = url;
    }

    public JEditorPane getBrowser() {
        return browser;
    }

    public void setBrowser(JEditorPane browser) {
        this.browser = browser;
    }

    public JTextArea getLog() {
        return log;
    }

    public void setLog(JTextArea log) {
        this.log = log;
    }
    
    @Override
    public void run() {
        try {
            browser.setPage(url);
           log.append(super.getName()+" start\n");
           log.append(url.toString());
            URLConnection conn = url.openConnection();
             Map<String, List<String>> map = conn.getHeaderFields();
            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
               log.append(entry.getKey() + ":" + entry.getValue() + "\n");
            }
                String server = conn.getHeaderField("Server");

                if (server == null) {
                  log.append("Key 'Server' is not found! \n");
                } else {
                    log.append("Server - " + server+"\n");
                }
           
        } catch (IOException ex) {
            Logger.getLogger(ThreadWorker.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
    
}
