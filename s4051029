    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       String u1 = urlTextfield1.getText().trim();
       String u2 = urlTextfield2.getText().trim();
        try {
       log1.setText("");
       log2.setText("");
       url1 =  new URL(u1);
       url2 =  new URL(u2);
      ThreadWorker worker1 = new ThreadWorker();
      worker1.setName("Thread 1");
      worker1.setBrowser(browser1);
      worker1.setUrl(url1);
      worker1.setLog(log1);
      worker1.start();
      
       ThreadWorker worker2 = new ThreadWorker();
         worker2.setName("Thread 2");
      worker2.setBrowser(browser2);
      worker2.setUrl(url2);
      worker2.setLog(log2);
      worker2.start();
      
      
        } 
        catch(MalformedURLException e)
        {
            JOptionPane.showMessageDialog(rootPane,"URL INVALID", "ERROR", WIDTH);
        }
        catch (IOException ex) {
            Logger.getLogger(BrowserFrame.class.getName()).log(Level.SEVERE, null, ex);
        }
       
    }                                        

